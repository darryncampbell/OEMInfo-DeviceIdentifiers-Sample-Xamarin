<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OEMInfo_DeviceIdentifiers_Xamarin.MainPage">
    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Device Identifiers via OEMInfo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Serial Number" FontSize="Title" Padding="30,10,30,10"/>
            <Label x:Name="serial" Text="Serial Number will appear here..." FontSize="16" Padding="30,0,30,0"/>
            <Label Text="IMEI" FontSize="Title" Padding="30,10,30,10"/>
            <Label x:Name="imei" Text="IMEI will appear here..." FontSize="16" Padding="30,0,30,0"/>
            <Label Text="Bluetooth MAC" FontSize="Title" Padding="30,10,30,10"/>
            <Label x:Name="btMac" Text="Bluetooth MAC will appear here..." FontSize="16" Padding="30,0,30,30"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
